# Medical PDF OCR to CCD/CCDA - Configuration Template
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED: Google Gemini API Key
# ============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# OPTIONAL: Model Configuration
# ============================================================================
# OCR Model (Gemini 3 Pro Preview supports vision)
OCR_MODEL_NAME=gemini-3-pro-preview

# Structuring Model (Gemini 2.5 Flash is fast and accurate)
STRUCTURING_MODEL_NAME=gemini-2.5-flash

# ============================================================================
# OPTIONAL: Token Limits & Pricing (for cost estimation)
# ============================================================================
# Max tokens per request (for safety)
MAX_INPUT_TOKENS=100000
MAX_OUTPUT_TOKENS=16384

# Pricing (USD per 1M tokens - Gemini Flash as of Dec 2024)
PRICE_INPUT_PER_1M=0.075
PRICE_OUTPUT_PER_1M=0.30

# ============================================================================
# OPTIONAL: Debug Settings
# ============================================================================
# Enable debug mode (saves intermediate outputs)
DEBUG=false

# ============================================================================
# OPTIONAL: Processing Settings
# ============================================================================
# Fuzzy matching threshold for deduplication (0.0-1.0)
FUZZY_THRESHOLD=0.85

# Maximum pages to process (0 = unlimited)
MAX_PAGES=0
